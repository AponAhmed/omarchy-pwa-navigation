{
  "manifest_version": 3,
  "name": "PWA Nav Buttons",
  "version": "1.1",
  "description": "Adds Back, Reload, and Forward buttons to all web apps",
  "permissions": ["scripting", "tabs"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["buttons.js"],
      "css": ["buttons.css"],
      "run_at": "document_end"
    }
  ]
}
